<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.jfoenix.controls.JFXButton?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #fff;" fx:controller="controllers.ChatController">
    <top>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <children>
                <Pane prefHeight="139.0" prefWidth="1102.0" style="-fx-background-color: #2D75E8;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Label layoutX="73.0" layoutY="30.0" text=" Your ChatRoom" textFill="WHITE">
                            <font>
                                <Font size="48.0" />
                            </font>
                        </Label>
                        <Label layoutX="79.0" layoutY="91.0" textFill="WHITE">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
                <Label text="Chat with you tutor">
                    <font>
                        <Font name="Century Gothic Bold" size="15.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Username" />
                        <TextField fx:id="txtUsername" promptText="Username..." />
                        <Label text="Server" />
                        <TextField fx:id="txtServer" promptText="server" />
                        <Label text="Port" />
                        <TextField fx:id="txtPort" prefHeight="25.0" prefWidth="65.0" promptText="Port" />
                        <JFXButton fx:id="btnConnect" onAction="#connectClick" prefHeight="41.0" prefWidth="142.0" style="-fx-background-color: #1B6CD7; -fx-background-radius: 5em;" text="Connect to server" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </JFXButton>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label alignment="CENTER" text="ChatRoom">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="txtChatArea" editable="false" prefHeight="244.0" prefWidth="590.0" />
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="txtMessage" promptText="Message..." HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="btnSend" onAction="#sendClick" prefHeight="41.0" prefWidth="142.0" style="-fx-background-color: #1B6CD7; -fx-background-radius: 5em;" text="Send" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <right>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label style="-fx-background-color: Transparent;" textFill="#f5e5e5">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ListView fx:id="listConnectedUsers" prefHeight="279.0" prefWidth="103.0" style="-fx-background-color: Transparent;" />
            </children>
            <BorderPane.margin>
                <Insets right="10.0" />
            </BorderPane.margin>
        </VBox>
    </right>
    <bottom>
        <HBox alignment="CENTER">
            <children>
                <Label>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>
</BorderPane>
