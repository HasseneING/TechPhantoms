{% extends 'base.html.twig' %}

{% block title %}Card index{% endblock %}
{% block hero %} <br>{% endblock %}
{% block body %}
    <h1>Card index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td>{{ card.firstName }}</td>
                <td>{{ card.lastName }}</td>
                <td>{{ card.Email }}</td>
                <td>
                    <a href="{{ path('card_show', {'id': card.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('card_edit', {'id': card.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('card_new') }}">Create new</a>
{% endblock %}
