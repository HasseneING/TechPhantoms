{% extends 'base.html.twig' %}
{% block title %}All Reviews!{% endblock %}
{% block body %}
<center>
    </br>
    <h1> Here is your Feedback list !  </h1>
    </br>
    </br>

<table class="table">
    <tr>
        <th>ID Review </th>
        <th>ID Student </th>
        <th>ID Tutor </th>
        <th>Comment</th>
        <th>Note</th>
        <th>Stars</th>
        <th>DATE
        <th>Delete </th>
        <th>Update </th>
    </tr>
    <tr {% for r in reviews %}>
        <td>{{ r.id }}</td>
        <td>{{ r.idSutdent }}</td>
        <td>{{ r.idTutor }}</td>
        <td>{{ r.comment }}</td>
        <td>{{ r.note }}</td>
        <td>{{ r.rating|rating}}</td>
        <td>{{ r.Date|date('d-m-Y H:i:s')  }}</td>
        <td> <form action="{{  path('delete', {'id':r.id }) }}" > <button type="submit" class="btn btn-danger "> Delete </button> </form> </td>
        <td> <form action="{{  path('update', {'id':r.id }) }}" > <button type="submit" class="btn btn-success"> Update </button> </form> </td>
    </tr {% endfor %}>
</table>
</center>
    </br></br>
    </br></br>
{% endblock %}