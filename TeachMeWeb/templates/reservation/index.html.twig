{% extends 'admin/index.html.twig' %}
{% block title %}Reservation index{% endblock %}

{% block body %}
<main class='main-content bgc-grey-100'>
    <div id='mainContent'>
        <div class="container-fluid">
            <h4 class="c-grey-900 mT-10 mB-30">Meeting Management</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="bgc-white bd bdrs-3 p-20 mB-20">
    <h1>Current Reservations</h1>

                        <table class="table" id="tableac">
                            <input type="text" id="search" class="form-control" placeholder='Search'>

        <thead>
            <tr>
                <th>ReservationId</th>
                <th>ReservationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.reservationId }}</td>
                <td>{{ reservation.reservationDate ? reservation.reservationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'reservationId': reservation.reservationId}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'reservationId': reservation.reservationId}) }}">edit</a>
                </td>
            </tr>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js
"></script>
            <script>
                $(document).ready(function(){
                    $('#search').keyup(function(){
                        search_table($(this).val());
                    });
                    function search_table(value){
                        $('#tableac tbody tr').each(function(){
                            var found = 'false';
                            $(this).each(function(){
                                if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                                {
                                    found = 'true';
                                }
                            });
                            if(found === 'true')
                            {
                                $(this).show();

                            }
                            else
                            {
                                $(this).hide();

                            }
                        });
                    }
                });
