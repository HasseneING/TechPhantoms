

{% block body %}
    <h1>Exported Meetings</h1>

    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <h4 class="c-grey-900 mB-20">Upcoming Meetings</h4>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Meet Id</th>
                                    <th>Meet Link</th>
                                    <th>Meet Date</th>
                                    <th>Meet Password</th>
                                    <th>Meet Name</th>
                                    <th>Particitpants</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for meet in upmeets %}
                                    <tr>
                                        <td>{{ meet.meetId }}</td>
                                        <td>{{ meet.meetLink }}</td>
                                        <td>{{ meet.meetDate ? meet.meetDate|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ meet.meetPass }}</td>
                                        <td>{{ meet.meetName }}</td>
                                        <td>Tutor :{{ meet.tutorid }}
                                            <br>
                                            Student : {{ meet.studentid }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <h4 class="c-grey-900 mB-20">Previous Meetings</h4>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Meet Id</th>
                                    <th>Meet Link</th>
                                    <th>Meet Date</th>
                                    <th>Meet Password</th>
                                    <th>Meet Name</th>
                                    <th>Particitpants</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for meet in prevmeets %}
                                    <tr>
                                        <td>{{ meet.meetId }}</td>
                                        <td>{{ meet.meetLink }}</td>
                                        <td>{{ meet.meetDate ? meet.meetDate|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ meet.meetPass }}</td>
                                        <td>{{ meet.meetName }}</td>
                                        <td>Tutor :{{ meet.tutorid }}
                                            <br>
                                            Student : {{ meet.studentid }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
