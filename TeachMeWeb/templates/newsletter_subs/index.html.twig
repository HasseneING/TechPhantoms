{%  extends "admin/index.html.twig" %}

{% block title %}NewsletterSubs index{% endblock %}

{% block body %}
    <h1>NewsletterSubs index</h1>

    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            <div class="container-fluid">
                <h4 class="c-grey-900 mT-10 mB-30">Newsletter</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <h4 class="c-grey-900 mB-20">List of emails</h4>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Email</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Email</th>
                                    <th>actions</th>
                                </tr>
                                </tfoot>
                                <tbody>


                                {% for newsletter_sub in newsletter_subs %}
                                    <tr>
                                        <td>{{ newsletter_sub.id }}</td>
                                        <td>{{ newsletter_sub.Email }}</td>
                                        <td>
                                            <a href="{{ path('newsletter_subs_show', {'id': newsletter_sub.id}) }}">show</a>
                                            <a href="{{ path('newsletter_subs_edit', {'id': newsletter_sub.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3">no records found</td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>









    <a href="{{ path('newsletter_subs_new') }}">Create new</a>
{% endblock %}
